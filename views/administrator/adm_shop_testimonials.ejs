<!DOCTYPE html>
<html lang="ru">
  <% include lay_adm_1_head.ejs %>
  <body>
    <div id="wrapper">
      <% include lay_adm_2_navigation.ejs %>

      <!-- #page-wrapper -->
      <div id="page-wrapper">
        <div class="row">
          <div class="col-lg-12"><h1 class="page-header">Отзывы</h1></div>
          <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->

        <div class="row"><div class="col-lg-12"></div></div>
        <br />

        <!-- MAIN CONTENT HERE: -->
        <div class="row">
          <div class="col-lg-12">
            <div class="panel panel-default">
              <div class="panel-heading">Список отзывов</div>

              <div class="panel-body">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th scope="col">Товар</th>
                      <th scope="col">Статус</th>
                      <th scope="col">Автор</th>
                      <th style="width: 30%" scope="col">Содержание</th>
                      <th scope="col">Дата</th>
                      <th scope="col">Действия</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% transData.testimonialsArr.forEach(function(testimonial){
                    %>
                    <tr>
                      <th scope="row"><%= testimonial.shopitemid %></th>
                      <td>
                        <% if (testimonial.approved) { %>
                        <span class="badge timeline-badge success"
                          >Одобрен</span
                        >
                        <% } else {%>
                        <span class="badge timeline-badge warning"
                          >Ожидает</span
                        >
                        <% } %>
                      </td>
                      <td><%= testimonial.authorname %></td>
                      <td><%= testimonial.content %></td>
                      <td><%= testimonial.formatedTime %></td>
                      <td>
                        <button
                          name="testimonial-list-del-one"
                          value="<%=testimonial._id%>"
                          type="button"
                          class="btn btn-danger btn-xs"
                        >
                          <i class="fa fa-times fa-fw"></i> Удалить
                        </button>
                        <% if (!testimonial.approved) { %>
                        <button
                          name="testimonial-list-approve-one"
                          value="<%=testimonial._id%>"
                          type="button"
                          class="btn btn-success btn-xs"
                        >
                          <i class="fa fa-send fa-fw"></i> Одобрить
                        </button>
                        <% } %>
                      </td>
                    </tr>

                    <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        <!-- /MAIN CONTENT HERE: -->
      </div>
      <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
    <% include lay_adm_4_bottomscripts.ejs %>
  </body>
</html>
