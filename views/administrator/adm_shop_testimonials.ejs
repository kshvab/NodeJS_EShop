<!DOCTYPE html>
<html lang="ru">
  <% include lay_adm_1_head.ejs %>
  <body>
    <div id="wrapper">
      <% include lay_adm_2_navigation.ejs %>

      <!-- #page-wrapper -->
      <div id="page-wrapper">
        <div class="row">
          <div class="col-lg-12"><h1 class="page-header">Отзывы</h1></div>
          <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->

        <div class="row"><div class="col-lg-12"></div></div>
        <br />

        <!-- MAIN CONTENT HERE: -->
        <div class="row">
          <div class="col-lg-12">
            <div class="panel panel-default">
              <div class="panel-heading">Список отзывов</div>

              <div class="panel-body">
                <!-- PAGINATION -->
                <%var len = transData.testimonialsArr.length; var rest =
                len%transData.itemsPerPage; var fullPages =
                (len-rest)/transData.itemsPerPage; var pages = fullPages+1; %>
                <%if (len>transData.itemsPerPage) { %>

                <div class="items-pagination">
                  <ul class="pagination">
                    <li
                      class="page-item <%if (transData.page == 1) { %> disabled <%}%>"
                    >
                      <a class="page-link" href="?page=1">&laquo;</a>
                    </li>

                    <% for (var i = 1; i<=pages; i++) { %> <% var lWide = 3; var
                    rWide = 3; %> <% if (transData.page == 1) rWide = 5; if
                    (transData.page == 2) rWide = 4;%> <% if (transData.page ==
                    +pages) lWide = 5; if (transData.page == +pages-1) lWide =
                    4;%> <% if ( ( i > (+transData.page-lWide) ) && ( i <
                    (+transData.page+rWide) ) ){ %>
                    <li
                      class=" page-item <%if (transData.page == i) { %> active <%}%>"
                    >
                      <a class="page-link" href="?page=<%=i%>"><%=i%></a>
                    </li>
                    <%}%> <%}%>

                    <li
                      class="page-item <%if (transData.page == pages) { %> disabled <%}%>"
                    >
                      <a class="page-link" href="?page=<%=pages%>">&raquo;</a>
                    </li>
                  </ul>
                </div>
                <%}%>
                <!-- /PAGINATION -->
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th scope="col">Товар</th>
                      <th scope="col">Статус</th>
                      <th scope="col">Автор</th>
                      <th style="width: 30%" scope="col">Содержание</th>
                      <th scope="col">Дата</th>
                      <th scope="col">Действия</th>
                    </tr>
                  </thead>
                  <tbody>



                      <% for (var i = transData.page*transData.itemsPerPage-transData.itemsPerPage; i<transData.testimonialsArr.length; i++ ) {%>
                      <%if (i<transData.page*transData.itemsPerPage) {%>
                    <tr>
                      <th scope="row"><%= transData.testimonialsArr[i].shopitemid %></th>
                      <td>
                        <% if (transData.testimonialsArr[i].approved) { %>
                        <span class="badge timeline-badge success"
                          >Одобрен</span
                        >
                        <% } else {%>
                        <span class="badge timeline-badge warning"
                          >Ожидает</span
                        >
                        <% } %>
                      </td>
                      <td><%= transData.testimonialsArr[i].authorname %></td>
                      <td><%= transData.testimonialsArr[i].content %></td>
                      <td><%= transData.testimonialsArr[i].formatedTime %></td>
                      <td>
                        <button
                          name="testimonial-list-del-one"
                          value="<%=transData.testimonialsArr[i]._id%>"
                          type="button"
                          class="btn btn-danger btn-xs"
                        >
                          <i class="fa fa-times fa-fw"></i> Удалить
                        </button>
                        <% if (!transData.testimonialsArr[i].approved) { %>
                        <button
                          name="testimonial-list-approve-one"
                          value="<%=transData.testimonialsArr[i]._id%>"
                          type="button"
                          class="btn btn-success btn-xs"
                        >
                          <i class="fa fa-send fa-fw"></i> Одобрить
                        </button>
                        <% } %>
                      </td>
                    </tr>





                    <% } %>
                    <% }; %>
                  </tbody>
                </table>
                <!-- PAGINATION -->
                <%var len = transData.testimonialsArr.length; var rest =
                len%transData.itemsPerPage; var fullPages =
                (len-rest)/transData.itemsPerPage; var pages = fullPages+1; %>
                <%if (len>transData.itemsPerPage) { %>

                <div class="items-pagination">
                  <ul class="pagination">
                    <li
                      class="page-item <%if (transData.page == 1) { %> disabled <%}%>"
                    >
                      <a class="page-link" href="?page=1">&laquo;</a>
                    </li>

                    <% for (var i = 1; i<=pages; i++) { %> <% var lWide = 3; var
                    rWide = 3; %> <% if (transData.page == 1) rWide = 5; if
                    (transData.page == 2) rWide = 4;%> <% if (transData.page ==
                    +pages) lWide = 5; if (transData.page == +pages-1) lWide =
                    4;%> <% if ( ( i > (+transData.page-lWide) ) && ( i <
                    (+transData.page+rWide) ) ){ %>
                    <li
                      class=" page-item <%if (transData.page == i) { %> active <%}%>"
                    >
                      <a class="page-link" href="?page=<%=i%>"><%=i%></a>
                    </li>
                    <%}%> <%}%>

                    <li
                      class="page-item <%if (transData.page == pages) { %> disabled <%}%>"
                    >
                      <a class="page-link" href="?page=<%=pages%>">&raquo;</a>
                    </li>
                  </ul>
                </div>
                <%}%>
                <!-- /PAGINATION -->
              </div>
            </div>
          </div>
        </div>
        <!-- /MAIN CONTENT HERE: -->
      </div>
      <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
    <% include lay_adm_4_bottomscripts.ejs %>
  </body>
</html>
