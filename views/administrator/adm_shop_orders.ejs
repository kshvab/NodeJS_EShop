<!DOCTYPE html>
<html lang="ru">
  <% include lay_adm_1_head.ejs %>
  <body>
    <div id="wrapper">
      <% include lay_adm_2_navigation.ejs %>

      <!-- #page-wrapper -->
      <div id="page-wrapper">
        <div class="row">
          <div class="col-lg-12"><h1 class="page-header">Заказы</h1></div>
          <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->

        <div class="row"><div class="col-lg-12"></div></div>
        <br />

        <!-- MAIN CONTENT HERE: -->
        <div class="row">
          <div class="col-lg-12">
            <div class="panel panel-default">
              <div class="panel-heading">Список заказов</div>

              <div class="panel-body">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th scope="col">ID</th>
                      <th scope="col">Статус</th>
                      <th scope="col">Имя</th>
                      <th scope="col">Группа</th>
                      <th scope="col">Дата</th>
                      <th scope="col">Действия</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% transData.ordersArr.forEach(function(order){ %>
                    <tr>
                      <th scope="row"><%= order._id %></th>
                      <td>
                        <% if (order.unloaded) { %>
                        <span class="badge timeline-badge success"
                          >Выгружен</span
                        >
                        <% } else {%>
                        <span class="badge timeline-badge warning"
                          >Ожидает</span
                        >
                        <% } %>
                      </td>
                      <td><%= order.user.name %></td>
                      <td><%= order.user.group %></td>
                      <td><%= order.formatedTime %></td>
                      <td>
                        <button
                          name="orders-list-del-one"
                          value="<%=order._id%>"
                          type="button"
                          class="btn btn-danger btn-xs"
                        >
                          <i class="fa fa-times fa-fw"></i> Удалить
                        </button>
                        <% if (!order.unloaded) { %>
                        <button
                          name="orders-list-unload-one"
                          value="<%=order._id%>"
                          type="button"
                          class="btn btn-success btn-xs"
                        >
                          <i class="fa fa-send fa-fw"></i> Выгрузить
                        </button>
                        <% } %>
                      </td>
                    </tr>

                    <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        <!-- /MAIN CONTENT HERE: -->
      </div>
      <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
    <% include lay_adm_4_bottomscripts.ejs %>
  </body>
</html>
