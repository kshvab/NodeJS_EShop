<!DOCTYPE html>

<html lang="en">
<% include ../layout/lay_site_1_head.ejs %>

<body>
  <% include ../layout/lay_site_2_navigation.ejs %>

  <!-- CONTAINER: -->
  <div class="container">
    <div class="row">
      <div class="col-lg-3">
        <br />
        <% include lay_shop_sidebar.ejs %>
      </div>

      <div class="col-lg-9">
        <!-- MAIN CONTENT HERE: -->
      
        <br />
        <H1>Каталог товаров</H1>
        


        <% var subCatsArr = [];
          transData.shopCategoriesArr.forEach(function(item){ if
          (!item.catFatherId) { subCatsArr.push(item); } }); %>
        <% var n=subCatsArr.length; var rest = n%3; var rows = (n-rest)/3; %>

        <% for (i=0; i<rows; i++) { %>
        <div class="row">
          <div class="col-lg-4 tile-subcategory-bloc">

            <div class="border-primary">
              <a href="/shop/<%= subCatsArr[i*3+0].catAlias %>">
                <img style="width: 100%; display: block;"
                  src="<%= '/import_foto/' + (subCatsArr[i*3+0].catPicture).slice(13) %>" alt="Card image"
                  onerror="this.style.display = 'none'" />
              </a>
            </div>
            <a class="tile-subcategory-name" href="/shop/<%= subCatsArr[i*3+0].catAlias %>">
            <%= subCatsArr[i*3+0].catName %>
          </a>
          </div>
          <div class="col-lg-4 tile-subcategory-bloc">
            <div class="border-primary">
              <a href="/shop/<%= subCatsArr[i*3+1].catAlias %>">
                <img style="width: 100%; display: block;"
                  src="<%= '/import_foto/' + (subCatsArr[i*3+1].catPicture).slice(13) %>" alt="Card image"
                  onerror="this.style.display = 'none'" />
              </a>
            </div>
            <a class="tile-subcategory-name" href="/shop/<%= subCatsArr[i*3+1].catAlias %>">
            <%= subCatsArr[i*3+1].catName %>
          </a>
          </div>
          <div class="col-lg-4 tile-subcategory-bloc">
            <div class="border-primary">
              <a href="/shop/<%= subCatsArr[i*3+2].catAlias %>">
                <img style="width: 100%; display: block;"
                  src="<%= '/import_foto/' + (subCatsArr[i*3+2].catPicture).slice(13) %>" alt="Card image"
                  onerror="this.style.display = 'none'" />
              </a>
            </div>
            <a class="tile-subcategory-name" href="/shop/<%= subCatsArr[i*3+2].catAlias %>">
            <%= subCatsArr[i*3+2].catName %>
          </a>
          </div>
        </div>
        <%}%>
                  <div class="row">
                      <div class="col-lg-4 tile-subcategory-bloc"><% if (rest > 0) { %>
        <div class="border-primary">
          <a href="/shop/<%= subCatsArr[(rows)*3+0].catAlias %>">
            <img style="width: 100%; display: block;"
              src="<%= '/import_foto/' + (subCatsArr[(rows)*3+0].catPicture).slice(13) %>" alt="Card image"
              onerror="this.style.display = 'none'" />
          </a>
        </div>
        <a class="tile-subcategory-name" href="/shop/<%= subCatsArr[(rows)*3+0].catAlias %>">
        <%= subCatsArr[(rows)*3+0].catName %>
      </a>
        <% } %>
      
      </div>
      <div class="col-lg-4 tile-subcategory-bloc"><% if (rest > 1) { %>
        <div class="border-primary">
          <a href="/shop/<%= subCatsArr[(rows)*3+1].catAlias %>">
            <img style="width: 100%; display: block;"
              src="<%= '/import_foto/' + (subCatsArr[(rows)*3+1].catPicture).slice(13) %>" alt="Card image"
              onerror="this.style.display = 'none'" />
          </a>
        </div>
        <a class="tile-subcategory-name" href="/shop/<%= subCatsArr[(rows)*3+1].catAlias %>"></a>
        <%= subCatsArr[(rows)*3+1].catName %>
      </a>
        <% } %>
      </div>
      <div class="col-lg-4 tile-subcategory-bloc"></div>
    </div>


    <hr>


    <%var len = transData.shopItemsArr.length; var rest = len%transData.itemsPerPage; var fullPages = (len-rest)/transData.itemsPerPage; var pages = fullPages+1; %>
    <div class="items-pagination">
      <ul class="pagination">
        <li class="page-item <%if (transData.page == 1) { %> disabled <%}%>">
          <a class="page-link" href="?page=<%=transData.page-1%>">&laquo;</a>
        </li>
        <% for (var i = 1; i<=pages; i++) { %>
          <li class="page-item <%if (transData.page == i) { %> active <%}%>">
            <a class="page-link" href="?page=<%=i%>"><%=i%></a>
          </li>
        <%}%>
        <li class="page-item <%if (transData.page == pages) { %> disabled <%}%>">
          <a class="page-link" href="?page=<%=+transData.page+1%>">&raquo;</a>
        </li>
      </ul>
    </div>



    <% for (var i = transData.page*transData.itemsPerPage-transData.itemsPerPage; i<transData.shopItemsArr.length; i++ ) {%>
      
      <%if (i<transData.page*transData.itemsPerPage) {%>

      <div class="card-body">
        <div class="row">
          <div class="col-lg-5">
            <div class="border-primary">
              <img style="width: 100%; display: block;" src="<%= '/import_foto/' + (transData.shopItemsArr[i].picture).slice(13) %>"
                alt="Card image" onerror="this.style.display = 'none'" />
            </div>
          </div>
  
          <div class="col-lg-7">
            <a href="/shop/<%= transData.shopItemsArr[i].vendorCode %>">
              <h5 class="card-title"><%= transData.shopItemsArr[i].name %></h5>
            </a>
  
            <div class="row">
              <div class="col-lg-4">
                <div class="cart-uah"><%= transData.shopItemsArr[i].price %> грн</div>
              </div>
  
              <div class="col-lg-4">
                <h6 class="text-muted">Артикул: <%= transData.shopItemsArr[i].vendorCode %></h6>
              </div>
              <% if (transData.user.group == "Administrator" ||
                    transData.user.group == "Manager" || transData.user.group ==
                    "Agent") { %>
              <div class="col-lg-4">
                <h6 class="text-muted jq-stock-<%= transData.shopItemsArr[i].vendorCode %>" value="<%= transData.shopItemsArr[i].stock %>">
                  Остаток: <%= transData.shopItemsArr[i].stock %>
                </h6>
              </div>
              <% } %>
            </div>
  
            <div class="shopcart-and-wishlist-buttons">
              <div class="cart-amount btn-group">
                <button name="cart-amount-minus" type="button"
                  class="btn btn-secondary btn-sm jq-btn-minus-<%= transData.shopItemsArr[i].vendorCode %>" id="<%= transData.shopItemsArr[i].vendorCode %>">
                  <span class="fas fa-minus"></span>
                </button>
  
                <input type="number" min="1" max="<%= transData.shopItemsArr[i].stock %>" step="1" name="<%= transData.shopItemsArr[i].vendorCode %>" id="555"
                  class="cart-amount-input" value="1" />
  
                <button name="cart-amount-plus" type="button"
                  class="btn btn-secondary btn-sm jq-btn-plus-<%= transData.shopItemsArr[i].vendorCode %>" id="<%= transData.shopItemsArr[i].vendorCode %>">
                  <span class="fas fa-plus"></span>
                </button>
              </div>
  
              <button name="add-transData.shopItemsArr[i]-to-shopcart-button" type="button"
                class="btn btn-success btn-sm transData.shopItemsArr[i]-add-to-shopcart-button" id="<%= transData.shopItemsArr[i].vendorCode %>">
                В Корзину
              </button>
  
              <button name="add-transData.shopItemsArr[i]-to-wishlist-button" type="button"
                class="btn btn-warning btn-sm transData.shopItemsArr[i]-add-to-wishlist-button" id="<%= transData.shopItemsArr[i].vendorCode %>">
                <span class="fas fa-heart"></span>
              </button>
            </div>
          </div>
        </div>
      </div>
      <% } %>
    <% }; %>
    <div class="items-pagination">
        <ul class="pagination">
          <li class="page-item <%if (transData.page == 1) { %> disabled <%}%>">
            <a class="page-link" href="?page=<%=transData.page-1%>">&laquo;</a>
          </li>
          <% for (var i = 1; i<=pages; i++) { %>
            <li class="page-item <%if (transData.page == i) { %> active <%}%>">
              <a class="page-link" href="?page=<%=i%>"><%=i%></a>
            </li>
          <%}%>
          <li class="page-item <%if (transData.page == pages) { %> disabled <%}%>">
            <a class="page-link" href="?page=<%=+transData.page+1%>">&raquo;</a>
          </li>
        </ul>
      </div>
    <!-- /MAIN CONTENT HERE: -->
  </div>
  </div>
  </div>
  <!-- /CONTAINER: -->

  <% include ../layout/lay_site_4_bottomscripts.ejs %>
</body>

</html>